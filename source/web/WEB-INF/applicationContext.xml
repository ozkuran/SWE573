<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="annotatedClasses">
            <list>
                <value>dto.EntityEvent</value>
                <value>dto.EntityEventtype</value>
                <value>dto.EntityMember</value>
                <value>dto.EntityMembertype</value>
                <value>dto.EntityPrice</value>
                <value>dto.EntityProducer</value>
                <value>dto.EntityProduct</value>
                <value>dto.EntityProducttype</value>
                <value>dto.EntityStock</value>
                <value>dto.EntityTransaction</value>
                <value>dto.EntityTransactiondetail</value>
                <value>dto.EntityUnit</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.connection.url">jdbc:mysql://localhost:3306/bukoop</prop>
                <prop key="hibernate.connection.driver_class">com.mysql.jdbc.Driver</prop>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
            </props>
        </property>
    </bean>
</beans>

